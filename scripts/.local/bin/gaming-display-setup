#!/usr/bin/env bash

# Simple script to setup multi-monitor solution for desktop use (vertical 1080p monitor + horizontal 1080p monitor)
# Requires xrandr, xrdb, and i3

echo "Xft.dpi: 96" | xrdb -override
xrandr --output HDMI-0 --mode 1920x1080 --panning 0x0 --scale 1x1 --rotate left --output DP-0 --mode 1920x1080 --panning 0x0 --scale 1x1 --primary
xrandr --output HDMI-0 --pos 0x0 --output DP-0 --pos 1080x420
xrandr --fb 3000x1920
i3-msg restart
