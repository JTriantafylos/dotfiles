#!/usr/bin/env bash

# Simple utility to create a pseudo-dmenu using kitty and fzf.
# Requires i3, xdotool, and kitty

dmenufzf_windowid=$(xdotool search --name "^dmenu-fzf$")

if [[ -n $dmenufzf_windowid ]]; then
	xdotool windowclose $dmenufzf_windowid
else
    i3-msg exec "kitty --title \"dmenu-fzf\" i3-dmenu-desktop --dmenu=\"fzf --reverse --color=16\""
fi
